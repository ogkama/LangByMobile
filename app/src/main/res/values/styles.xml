<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="activeButton">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/fredoka_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/active</item>
        <item name="android:background">@drawable/active_btn</item>
    </style>
    <style name="activeTextBox">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/fredoka_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">@drawable/active_tb</item>
        <item name="android:paddingStart">24dp</item>
    </style>
    <style name="langBtn">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/fredoka_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="inactiveButton">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:background">@drawable/inactive_btn</item>
    </style>
    <style name="redButton">
        <item name="android:backgroundTint">@color/caution</item>
        <item name="android:background">@drawable/red_btn</item>
    </style>
    <style name="orangeButton">
        <item name="android:backgroundTint">@color/highlight</item>
        <item name="android:background">@drawable/orange_btn</item>
    </style>
    <style name="greenButton">
        <item name="android:backgroundTint">@color/correct</item>
        <item name="android:background">@drawable/green_btn</item>
    </style>
    <style name="cyanButton">
        <item name="android:backgroundTint">#00B5AE</item>
        <item name="android:background">@drawable/cyan_btn</item>
    </style>
</resources>